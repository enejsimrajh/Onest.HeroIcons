<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <PackageId>Onest.HeroIcons</PackageId>
    <PackageIcon>heroicons-logo.png</PackageIcon>
	<PackageTags>blazor;components;library;icons;heroicons;</PackageTags>
	<PackageLicenseFile>LICENSE</PackageLicenseFile>
	<PackageReadmeFile>README.md</PackageReadmeFile>
	<Description>HeroIcons as Blazor components.</Description>
    <RepositoryUrl>https://github.com/enejsimrajh/Onest.HeroIcons</RepositoryUrl>
	<EnablePackageValidation>true</EnablePackageValidation>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\assets\heroicons-logo.png" Pack="true" PackagePath="\" />
	<None Include="..\..\LICENSE" Pack="true" PackagePath="\" />
	<None Include="..\..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.1" />
  </ItemGroup>

</Project>
